---
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
const sorted = projects.sort((a,b) => (b.data.featured ? 1 : 0) - (a.data.featured ? 1 : 0));
---

<h1>Projects</h1>

<ul>
  {sorted.map((p) => (
    <li>
      <a href={`/projects/${p.slug}/`}>{p.data.title}</a>
      <div>{p.data.summary}</div>
      <small>{p.data.status} Â· {p.data.tags.join(", ")}</small>
    </li>
  ))}
</ul>
