---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");

// Featured ensin, sitten title
const sorted = projects
  .sort((a, b) => {
    const af = a.data.featured ? 1 : 0;
    const bf = b.data.featured ? 1 : 0;
    if (bf !== af) return bf - af;
    return String(a.data.title).localeCompare(String(b.data.title));
  });

const statusLabel = (s) => String(s ?? "").trim() || "Draft";

const statusClass = (s) => {
  const v = String(s ?? "").toLowerCase();
  if (v.includes("live") || v.includes("published")) return "is-live";
  if (v.includes("writing") || v.includes("draft")) return "is-draft";
  if (v.includes("planned") || v.includes("idea")) return "is-planned";
  if (v.includes("paused") || v.includes("hold")) return "is-paused";
  return "is-neutral";
};
---

<BaseLayout title="Projects - Halmetoja Model">
<style>
  .wrap {
    max-width: 1040px;
    margin: 0 auto;
    padding: 20px 16px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .wrap {
      padding: 40px 20px;
    }
  }

  header {
    display: grid;
    gap: 12px;
    margin-bottom: 24px;
  }

  @media (min-width: 640px) {
    header {
      gap: 14px;
      margin-bottom: 28px;
    }
  }

  .kicker {
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    opacity: 0.65;
  }

  h1 {
    font-size: 4rem;
    line-height: 1.15;
    margin: 0;
  }

  @media (min-width: 640px) {
    h1 {
      font-size: 4rem;
      line-height: 1.08;
    }
  }

  p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .lede {
    font-size: 36px;
    line-height: 1.6;
    max-width: 70ch;
    margin: 0;
    opacity: 0.82;
  }

  @media (min-width: 640px) {
    .lede {
      font-size: 34px;
    }
  }

  .grid {
    display: flex !important;
    flex-direction: column !important;
    gap: 20px;
    margin-top: 24px;
  }

  @media (min-width: 1100px) {
    .grid {
      display: grid !important;
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 20px;
    }
  }

  @media (min-width: 1400px) {
    .grid {
      grid-template-columns: repeat(3, 1fr) !important;
      gap: 24px;
    }
  }

  .card {
    border: 1px solid rgba(0,0,0,0.10);
    border-radius: 12px;
    padding: 14px;
    background: #fff;
    transition: transform .12s ease, border-color .12s ease, box-shadow .12s ease;
  }

  @media (min-width: 640px) {
    .card {
      border-radius: 16px;
      padding: 18px;
    }
  }

  .card:hover {
    transform: translateY(-1px);
    border-color: rgba(0,0,0,0.18);
    box-shadow: 0 10px 28px rgba(0,0,0,0.08);
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.6rem;
    }

    h2 {
      font-size: 1.25rem;
    }

    p,
    li {
      font-size: 1rem;
    }

    /* Lisää kosketustavoitteet mobiililaitteille */
    .card {
      min-height: 44px;
    }

    .title a {
      display: block;
      padding: 4px 0;
      min-height: 44px;
      display: flex;
      align-items: center;
    }
  }

  .topline {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 12px;
  }

  @media (min-width: 640px) {
    .topline {
      gap: 14px;
      margin-bottom: 14px;
    }
  }

  .title {
    font-size: 34px;
    margin: 0;
    line-height: 1.3;
    width: 100%;
  }

  @media (min-width: 640px) {
    .title {
      font-size: 32px;
      line-height: 1.25;
    }
  }

  .title a {
    color: inherit;
    text-decoration: none;
  }
  .title a:hover {
    text-decoration: underline;
  }

  .badge-row {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: flex-start;
    order: -1;
  }

  @media (min-width: 640px) {
    .badge-row {
      gap: 10px;
    }
  }

  .badge {
    font-size: 20px;
    line-height: 1;
    padding: 9px 16px;
    border-radius: 999px;
    border: 1px solid rgba(0,0,0,0.10);
    background: rgba(0,0,0,0.03);
    white-space: nowrap;
  }

  @media (min-width: 640px) {
    .badge {
      font-size: 20px;
      padding: 9px 16px;
    }
  }

  .badge.featured {
    border-color: rgba(0,0,0,0.14);
    background: rgba(0,0,0,0.06);
    font-weight: 600;
  }

  .badge.is-live { background: rgba(34,197,94,0.12); border-color: rgba(34,197,94,0.25); }
  .badge.is-draft { background: rgba(59,130,246,0.12); border-color: rgba(59,130,246,0.25); }
  .badge.is-planned { background: rgba(245,158,11,0.12); border-color: rgba(245,158,11,0.25); }
  .badge.is-paused { background: rgba(239,68,68,0.12); border-color: rgba(239,68,68,0.25); }

  .summary {
    margin: 0 0 8px;
    font-size: 30px;
    line-height: 1.5;
    opacity: 0.85;
    min-height: 40px;
  }

  @media (min-width: 640px) {
    .summary {
      margin: 0 0 10px;
      font-size: 28px;
      line-height: 1.55;
      min-height: 44px;
    }
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  @media (min-width: 640px) {
    .tags {
      gap: 8px;
    }
  }

  .tag {
    font-size: 20px;
    line-height: 1;
    padding: 9px 16px;
    border-radius: 999px;
    border: 1px solid rgba(0,0,0,0.10);
    background: #fff;
    opacity: 0.9;
  }

  @media (min-width: 640px) {
    .tag {
      font-size: 20px;
      padding: 9px 16px;
    }
  }

  .muted { opacity: 0.7; }
</style>

<div class="wrap">
  <header>
    <div class="kicker">halmetojamodel.com</div>
    <h1>Projects</h1>
    <p class="lede">
      A growing set of books, models, and maps - built to explain human dynamics with structure, metaphors, and lived clarity.
    </p>
  </header>

  <section class="grid" aria-label="Project list">
    {sorted.map((p) => (
      <article class="card">
        <div class="topline">
          <h2 class="title">
            <a href={`/projects/${p.slug}/`}>{p.data.title}</a>
          </h2>

          <div class="badge-row">
            {p.data.featured && <span class="badge featured">Featured</span>}
            <span class={`badge ${statusClass(p.data.status)}`}>{statusLabel(p.data.status)}</span>
          </div>
        </div>

        <p class="summary">{p.data.summary}</p>

        <ul class="tags" aria-label="Tags">
          {(p.data.tags ?? []).slice(0, 6).map((t) => (
            <li class="tag">{t}</li>
          ))}
          {(p.data.tags?.length ?? 0) > 6 && <li class="tag muted">+{p.data.tags.length - 6}</li>}
        </ul>
      </article>
    ))}
  </section>
</div>
</BaseLayout>